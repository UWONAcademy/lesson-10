  </div>

  <script>
    const wordList = [
        { word: "domestic", meaning: "adj. ÂõΩÂÜÖÁöÑÔºåÂÆ∂Â∫≠ÁöÑÔºåÈ©ØÂÖªÁöÑ" },
        { word: "dominant", meaning: "adj. Âç†‰ºòÂäøÁöÑÔºå‰∏ªË¶ÅÁöÑÔºåÊîØÈÖçÁöÑ" },
        { word: "dominate", meaning: "v. ÊîØÈÖçÔºåÊéßÂà∂ÔºåÂç†ÊçÆ‰∏ªÂØºÂú∞‰Ωç" },
        { word: "dose", meaning: "n. ÂâÇÈáèÔºõv. ÁªôËçØ" },
        { word: "dot", meaning: "n. ÁÇπÔºåÂ∞èÂúÜÁÇπÔºõv. ÊâìÁÇπ" },
        { word: "downtown", meaning: "n./adj./adv. Â∏Ç‰∏≠ÂøÉÔºàÁöÑÔºâ" },
        { word: "draft", meaning: "n. ËçâÁ®øÔºåÂæÅÂÖµÔºõv. Ëµ∑Ëçâ" },
        { word: "drain", meaning: "v. ÊéíÂá∫ÔºåËÄóÂ∞ΩÔºõn. ÊéíÊ∞¥Ê≤ü" },
        { word: "drift", meaning: "v./n. ÊºÇÊµÅÔºåÊºÇÁßª" },
        { word: "drown", meaning: "v. Ê∑πÊ≠ªÔºåÊ∫∫Ê∞¥" },
        { word: "due", meaning: "adj. Âà∞ÊúüÁöÑÔºåÂ∫îÂæóÁöÑÔºõn. Â∫î‰ªòÊ¨æ" },
        { word: "dull", meaning: "adj. Êó†ËÅäÁöÑÔºåËøüÈíùÁöÑÔºåÊöóÊ∑°ÁöÑ" },
        { word: "dumb", meaning: "adj. ÂìëÁöÑÔºåÊÑöË†¢ÁöÑ" },
        { word: "dump", meaning: "v. ÂÄæÂÄíÔºå‰∏¢ÂºÉÔºõn. ÂûÉÂúæÂ†Ü" },
        { word: "durable", meaning: "adj. ËÄêÁî®ÁöÑÔºåÊåÅ‰πÖÁöÑ" },
        { word: "dynamic", meaning: "adj. Âä®ÊÄÅÁöÑÔºåÊúâÊ¥ªÂäõÁöÑ" },
        { word: "earnest", meaning: "adj. ËÆ§ÁúüÁöÑÔºåËØöÊåöÁöÑ" },
        { word: "echo", meaning: "n./v. ÂõûÂ£∞ÔºåÂõûÂìç" },
        { word: "economical", meaning: "adj. ËäÇÁ∫¶ÁöÑÔºåÁªèÊµéÁöÑ" },
        { word: "edit", meaning: "v. ÁºñËæëÔºåÊ†°ËÆ¢" },
        { word: "efficient", meaning: "adj. È´òÊïàÁöÑÔºåÊúâÊïàÁéáÁöÑ" },
        { word: "elaborate", meaning: "adj. Á≤æÂøÉÂà∂‰ΩúÁöÑÔºõv. Á≤æÂøÉÂà∂‰Ωú" },
        { word: "elastic", meaning: "adj. ÊúâÂºπÊÄßÁöÑÔºåÁÅµÊ¥ªÁöÑ" },
        { word: "elegant", meaning: "adj. ‰ºòÈõÖÁöÑÔºåÈ´òÈõÖÁöÑ" },
        { word: "elementary", meaning: "adj. Âü∫Êú¨ÁöÑÔºåÂàùÁ∫ßÁöÑ" },
        { word: "eliminate", meaning: "v. Ê∂àÈô§ÔºåÊéíÈô§" },
        { word: "elsewhere", meaning: "adv. Âú®Âà´Â§ÑÔºåÂà∞Âà´Â§Ñ" },
        { word: "embarrass", meaning: "v. ‰ΩøÂ∞¥Â∞¨Ôºå‰ΩøÂõ∞Á™ò" },
        { word: "embrace", meaning: "v./n. Êã•Êä±ÔºåÊé•ÂèóÔºåÈááÁ∫≥" },
        { word: "emerge", meaning: "v. Âá∫Áé∞ÔºåÊµÆÁé∞ÔºåÊòæÁé∞" },
        { word: "emergency", meaning: "n. Á¥ßÊÄ•ÊÉÖÂÜµÔºåÁ™ÅÂèë‰∫ã‰ª∂" },
        { word: "emit", meaning: "v. ÂèëÂá∫ÔºåÊï£ÂèëÔºàÂÖâ„ÄÅÁÉ≠„ÄÅÊ∞îÂë≥Á≠âÔºâ" },
        { word: "emotion", meaning: "n. ÊÉÖÊÑüÔºåÊÉÖÁª™" },
        { word: "emphasize", meaning: "v. Âº∫Ë∞ÉÔºåÁùÄÈáç" },
        { word: "employ", meaning: "v. Èõá‰Ω£Ôºå‰ΩøÁî®" },
        { word: "enclose", meaning: "v. Âõ¥‰ΩèÔºåÂ∞ÅÂÖ•" },
        { word: "encounter", meaning: "v./n. ÈÅáÂà∞ÔºåÈÇÇÈÄÖÔºåÂÜ≤Á™Å" },
        { word: "endure", meaning: "v. ÂøçÂèóÔºåÊåÅÁª≠" },
        { word: "engage", meaning: "v. Âê∏ÂºïÔºåÂèÇ‰∏éÔºåÈõá‰Ω£" },
        { word: "enhance", meaning: "v. ÊèêÈ´òÔºåÂ¢ûÂº∫" }
    ];

    let currentIndex = 0;
    let currentRound = 1;
    let currentWord = {};
    const errorsRound1 = [];
    const errorsRound2 = [];

    const playBtn = document.getElementById("playBtn");
    const checkBtn = document.getElementById("checkBtn");
    const nextBtn = document.getElementById("nextBtn");
    const answerInput = document.getElementById("answer");
    const resultDiv = document.getElementById("result");
    const instructions = document.getElementById("instructions");
    const chineseHint = document.getElementById("chineseHint");
    const progress = document.getElementById("progress");
    const reportSection = document.getElementById("reportSection");
    const scoreSummary = document.getElementById("scoreSummary");
    const errorList = document.getElementById("errorList");
    const timeSummary = document.getElementById("timeSummary");
    const timerDisplay = document.getElementById("timer");

    let total = wordList.length * 2;
    let correct = 0;
    let selectedVoice = null;

    let startTime = Date.now();
    let round1Start = Date.now();
    let round1Time = 0;
    let round2Time = 0;
    let timerInterval = setInterval(() => {
      const elapsed = Date.now() - startTime;
      timerDisplay.textContent = `‚è± Time Elapsed: ${Math.floor(elapsed / 1000)} sec`;
    }, 1000);

    function loadVoicesAndSetVoice() {
      const voices = speechSynthesis.getVoices();
      if (voices.length > 0) {
        selectedVoice = voices.find(v =>
          v.name.includes("Google US English") ||
          (v.lang === "en-US" && v.default)
        ) || voices[0];
      }
    }

    if (speechSynthesis.getVoices().length === 0) {
      speechSynthesis.onvoiceschanged = loadVoicesAndSetVoice;
    } else {
      loadVoicesAndSetVoice();
    }

    playBtn.addEventListener("click", () => {
      if (!selectedVoice) loadVoicesAndSetVoice();
      if (currentRound === 1) speakWord(currentWord.word);
    });

    function speakWord(word) {
      const utterance = new SpeechSynthesisUtterance(word);
      utterance.lang = "en-US";
      if (selectedVoice) utterance.voice = selectedVoice;
      speechSynthesis.cancel();
      speechSynthesis.speak(utterance);
    }

    function loadWord() {
      currentWord = wordList[currentIndex];
      answerInput.value = "";
      resultDiv.textContent = "";
      nextBtn.classList.add("hidden");
      answerInput.focus();

      if (currentRound === 1) {
        instructions.textContent = "üéß Round 1: Click \"Play\" to hear the word";
        chineseHint.classList.add("hidden");

        // ‚úÖ Ëá™Âä®Êí≠ÊîæÂΩìÂâçÂçïËØç
        if (!selectedVoice) loadVoicesAndSetVoice();
        setTimeout(() => {
          speakWord(currentWord.word);
        }, 200);
      } else {
        instructions.textContent = "üí° Round 2: Type the correct English word";
        chineseHint.classList.remove("hidden");
        chineseHint.querySelector("span").textContent = currentWord.meaning;
      }

      progress.textContent = `Progress: ${currentIndex + 1} / ${wordList.length} - Round ${currentRound}`;
    }

    checkBtn.addEventListener("click", handleCheck);
    nextBtn.addEventListener("click", handleNext);

    function handleCheck() {
      const userAnswer = answerInput.value.trim().toLowerCase();
      const correctAnswer = currentWord.word.toLowerCase();

      if (userAnswer === correctAnswer) {
        resultDiv.textContent = "‚úÖ Correct!";
        resultDiv.className = "correct";
        correct++;
      } else {
        resultDiv.textContent = `‚ùå Incorrect. The correct answer is: ${currentWord.word}`;
        resultDiv.className = "wrong";
        const error = {
          word: currentWord.word,
          yourAnswer: userAnswer || "(blank)",
          meaning: currentWord.meaning
        };
        (currentRound === 1 ? errorsRound1 : errorsRound2).push(error);
      }

      nextBtn.classList.remove("hidden");
    }

    function handleNext() {
      currentIndex++;
      if (currentIndex >= wordList.length) {
        if (currentRound === 1) {
          round1Time = Date.now() - round1Start;
          currentRound = 2;
          currentIndex = 0;
          round1Start = Date.now();
          loadWord();
        } else {
          round2Time = Date.now() - round1Start;
          clearInterval(timerInterval);
          showReport();
        }
      } else {
        loadWord();
      }
    }

    function showReport() {
      document.getElementById("testSection").classList.add("hidden");
      reportSection.classList.remove("hidden");
      scoreSummary.textContent = `üéâ Test completed! Correct: ${correct} / ${total}`;
      timeSummary.innerHTML = `
        üïí Round 1 Time: ${Math.floor(round1Time / 1000)} seconds<br>
        üïí Round 2 Time: ${Math.floor(round2Time / 1000)} seconds
      `;

      let html = "";

      if (errorsRound1.length > 0) {
        html += `<h3>Round 1 - Listening Errors</h3><table><thead><tr><th>Word</th><th>Your Answer</th><th>Correct</th><th>Meaning</th></tr></thead><tbody>`;
        errorsRound1.forEach(item => {
          html += `<tr><td>${item.word}</td><td class="wrong">${item.yourAnswer}</td><td>${item.word}</td><td>${item.meaning}</td></tr>`;
        });
        html += `</tbody></table>`;
      }

      if (errorsRound2.length > 0) {
        html += `<h3>Round 2 - Meaning Errors</h3><table><thead><tr><th>Word</th><th>Your Answer</th><th>Correct</th><th>Meaning</th></tr></thead><tbody>`;
        errorsRound2.forEach(item => {
          html += `<tr><td>${item.word}</td><td class="wrong">${item.yourAnswer}</td><td>${item.word}</td><td>${item.meaning}</td></tr>`;
        });
        html += `</tbody></table>`;
      }

      if (!errorsRound1.length && !errorsRound2.length) {
        html = "<p>üéâ Perfect! No mistakes!</p>";
      }

      errorList.innerHTML = html;
    }

    document.addEventListener("keydown", (event) => {
      if (event.key === "Enter") {
        event.preventDefault();
        if (!nextBtn.classList.contains("hidden")) {
          handleNext();
        } else {
          handleCheck();
        }
      }
    });

    loadWord();
  </script>
</body>
</html>
