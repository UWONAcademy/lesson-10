      <button id="nextBtn" class="hidden">‚û°Ô∏è Next</button>
      <p id="progress"></p>
    </div>

    <div id="reportSection" class="hidden section">
      <h2>üìä Test Report</h2>
      <p id="scoreSummary"></p>
      <p id="timeSummary"></p>
      <div id="errorList"></div>
      <button onclick="location.reload()">üîÅ Restart</button>
